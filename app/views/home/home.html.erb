        background-color: white;
        width: 60%;
        margin: 0 auto;
        height: 600px;
      }

      #summary-content {
        padding: 20px 30px;
        color: black;
      }

      li {
        margin-top: 20px;
      }

      table {
        width:70%;
        border: 2px solid black;
        margin: 60px auto;
      }

      td {
        text-align: center;
        border: 1px solid black;
      }
      #sell_button {
        font-size: 20px; 
        border: none;
        padding: 10px 30px 10px 30px;
        background-color: #0080ff;
        border-radius: 5px;
        text-decoration: none;
        color: white;
      }
