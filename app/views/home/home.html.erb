      #submit-button:hover {
        background-color:#77a809;
      }
      #submit-button:active {
        position:relative;
        top:1px;
      }

      #clear-button {
        margin: 0 auto;
        display: block;
        padding: 2px;
        background-color: green;
        color: white;

      }

