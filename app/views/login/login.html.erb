<title>Login</title>
    <div class="container">
        <div class = "text-center">
            <h1>Log In!</h1>
            
            <%= form_tag submit_user_path, class: "form-horizontal" do %>
                
                <div class="field form-group">
                    <%= label_tag :email %> <br>
                    <%= text_field_tag :email %>
                </div>
                
                <div class="field form-group">
                    <%= label_tag :password %> <br>
                    <%= password_field_tag :password %>
                </div>
                
                <div class="actions">
                    <%= submit_tag "Log In", class: "btn btn-primary" %>
                    <a href='sellers/new' class="btn btn-default">Sign up</a>
                </div>
            <% end %>
        </div>
    </div>